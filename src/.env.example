# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=research_papers

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Database Configuration (SQLite by default)
DATABASE_URL=sqlite:///./research_papers.db

# Processing Configuration - Optimized for RAG Quality
CHUNK_SIZE=800          # Larger chunks for more context (was 500)
CHUNK_OVERLAP=200       # Higher overlap to preserve context (was 50)
TOP_K_RESULTS=8         # Retrieve more candidates for filtering (was 5)
MAX_CONTEXT_LENGTH=4000 # More context for LLM accuracy (was 2000)
CONFIDENCE_THRESHOLD=0.7
MIN_RELEVANCE_SCORE=0.3 # Filter low-quality chunks

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
